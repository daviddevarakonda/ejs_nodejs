<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FlipBook</title>
    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
        integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- js -->
    <script type="text/javascript" src="/js/turn.min.js"></script>
    <!-- css -->
    <link rel="stylesheet" href="/css/flip.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
</head>

<body>
    <%- include('partials/navbar.ejs') %>
        <div class="container">
            <div class="wrapper">
                <div class="aspect">
                    <div class="aspect-inner">
                        <div class="flipbook" id="flipbook">
                            <!-- Page 1 - Cover page -->
                            <div class="page">
                                <img src="https://github.com/daviddevarakonda/flip/blob/main/v1/images/fioneer_cover.jpg?raw=true"
                                    alt="Fioneer cover page" class="img-fluid" />
                            </div>
                            <!-- Page 2 - About the company, Vision and Mission -->
                            <% for(let page of pages){ ;%>
                                <div class="page">
                                    <div class="row">
                                        <div class="col-3">
                                            <img src="https://financialit.net/sites/default/files/image001_47.png"
                                                alt="Logo" class="img-fluid px-2 py-2" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <h2 class="fs-6 text-decoration-underline text-warning">
                                                <a class="link-warning" href="<%= page.topic1_url %>" target="_blank">
                                                    <%= page.topic1 %>
                                                </a>
                                            </h2>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <img src="<%= page.topic1_img %>" alt="<%= page.topic1_img_alt %>"
                                                class="img-fluid px-2 py-2" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <h2 class="fs-6 text-decoration-underline text-warning">
                                                <a class="link-warning" href="<%= page.topic2_url %>" target="_blank">
                                                    <%= page.topic2 %>
                                                </a>
                                            </h2>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <img src="<%= page.topic2_img %>" alt="<%= page.topic2_img_alt %>"
                                                class="img-fluid px-2 py-2" />
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                    <!-- Last Page -->
                                    <div class="page"></div>
                                    <% if(pages.length %2===1) { %>
                                        <div class="page"></div>
                                        <% }%>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- javascript for flipbook -->
        <script type="text/javascript">
            var flipbookEL = document.getElementById("flipbook");

            window.addEventListener("resize", function (e) {
                flipbookEL.style.width = "";
                flipbookEL.style.height = "";
                $(flipbookEL).turn(
                    "size",
                    flipbookEL.clientWidth,
                    flipbookEL.clientHeight
                );
            });

            $(flipbookEL).turn({
                autoCenter: true,
            });
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
</body>

</html>